<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <!-- Console Appender - Production Mode (Less verbose) -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1} - %m%n"/>
            <!-- Only log WARN and above to console in production -->
            <ThresholdFilter level="WARN" onMatch="ACCEPT" onMismatch="DENY"/>
        </Console>

        <!-- Rolling File Appender for Production -->
        <RollingFile name="RollingFile" fileName="logs/app-prod.log" filePattern="logs/app-prod-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5p %c{1}:%L - %m%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="50MB"/>
            </Policies>
            <DefaultRolloverStrategy max="30" compressionLevel="9"/>
        </RollingFile>

        <!-- Error Log - Separate file for errors only -->
        <RollingFile name="ErrorFile" fileName="logs/error-prod.log" filePattern="logs/error-prod-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5p %c{1}:%L - %m%n"/>
            <ThresholdFilter level="ERROR" onMatch="ACCEPT" onMismatch="DENY"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="20MB"/>
            </Policies>
            <DefaultRolloverStrategy max="30" compressionLevel="9"/>
        </RollingFile>

        <!-- JSON Appender for centralized logging systems (ELK, Splunk) -->
        <RollingFile name="JsonFile" fileName="logs/app-prod.json" filePattern="logs/app-prod-%d{yyyy-MM-dd}-%i.json.gz">
            <JsonLayout compact="true" eventEol="true" stacktraceAsString="true"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="50MB"/>
            </Policies>
            <DefaultRolloverStrategy max="15" compressionLevel="9"/>
        </RollingFile>
    </Appenders>

    <Loggers>
        <!-- Root Logger - INFO level for production -->
        <Root level="INFO">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="RollingFile"/>
            <AppenderRef ref="ErrorFile"/>
            <AppenderRef ref="JsonFile"/>
        </Root>

        <!-- Framework specific loggers -->
        <Logger name="utils" level="INFO" additivity="false">
            <AppenderRef ref="RollingFile"/>
            <AppenderRef ref="ErrorFile"/>
            <AppenderRef ref="JsonFile"/>
        </Logger>

        <Logger name="stepdefinitions" level="INFO" additivity="false">
            <AppenderRef ref="RollingFile"/>
            <AppenderRef ref="ErrorFile"/>
            <AppenderRef ref="JsonFile"/>
        </Logger>

        <!-- Suppress verbose libraries -->
        <Logger name="org.openqa.selenium" level="WARN"/>
        <Logger name="org.apache.http" level="ERROR"/>
        <Logger name="io.netty" level="ERROR"/>
        <Logger name="io.cucumber" level="INFO"/>
    </Loggers>
</Configuration>
